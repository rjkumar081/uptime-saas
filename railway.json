# 1) create railway.json in repo root
cat > railway.json <<'JSON'
{
  "build": {
    "builder": "NIXPACKS"
  },
  "deploy": {
    "start": "npm start",
    "restartPolicyType": "ON_FAILURE"
  },
  "services": {
    "backend": {
      "path": "uptime-backend",
      "start": "npm start"
    },
    "frontend": {
      "path": "uptime-frontend",
      "start": "npm run start"
    }
  }
}
JSON

# 2) commit & push
git add railway.json
git commit -m "Add railway.json (set root & services for Nixpacks)"
git push origin main
